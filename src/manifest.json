{
    "default_locale": "en",
    "name": "Vortmaro text reading assistant",
    "description": "A tool to lookup words and add them to a list of words to memorise",
    "version": "0.1.2",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "https://vortmaro.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "exclude_matches": ["*://developer.mozilla.org/*"],
            "matches": ["*://*/*"],
            "js": [
                "components/lookup.js",
                "components/declensionCruncher.js",
                "components/audio.js",
                "components/file.js",
                "components/dictionaries.js",
                "view-page.js"
            ],
            "css": [
                "word-definition.css",
                "page-modifications.css"
            ]
        }
    ],
    "manifest_version": 3
}
